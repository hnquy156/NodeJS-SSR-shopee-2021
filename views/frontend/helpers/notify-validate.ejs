<%
	showErrors = (errors) => {
		if (errors.length <= 0) return '';
		let xhtml = ``;
		errors.forEach(error => {
			let name = error.param;
			name = name.replace(new RegExp('id|_','gi'), (text) => {
				if (text === '_') return ' ';
				return '';
			});
			name = name.charAt(0).toUpperCase() + name.slice(1);

			xhtml += `<div><b>${name}:</b> ${error.msg}</div>`
		})
		return `<div class="auth-form__group">
					<div class="auth-form__error">${xhtml}</div>
				</div>`;
	}
%>
