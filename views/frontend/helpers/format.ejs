<%
    formatDateHelper = (time, type = null) => {
        return moment(time).format(systemConfigs.long_time_format);
    }

    formatSummaryHelper = (content, limit = 100) => {
        return content.replace(/<[^>]*>/igm, "").substring(0, limit);
    }

    formatCurrencyHelper = (price, unit = 'â‚«') => {
        let string = price.toString();
        let result = '';
        let count = 0;

        for(let i = string.length - 1; i >= 0; i--) {
            count++;
            result = string[i] + result;
            if (count % 3 === 0 && i > 0) result = '.' + result;
        }
        return result + ' ' + unit;
    }

    formatHideHelper = (text, showPosition = 'left', showLetterNumber = 3) => {
        let from = 0;
        let to = text.length - 1;
        if (showPosition === 'left') {
            from += showLetterNumber;
        } else {
            to -= showLetterNumber;
        }
        let string = '';

        for(let i = 0; i < text.length; i++) {
            if (from <= i && i <= to) string += '*'
            else string += text[i];
        }
        return string;
    }
